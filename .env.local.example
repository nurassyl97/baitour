# API Configuration
# Copy this file to .env.local and fill in your actual values

# Base URL for the tours API
NEXT_PUBLIC_API_BASE_URL=https://api.example.com

# API Key (if required)
NEXT_PUBLIC_API_KEY=your_api_key_here

# Optional: API Version
NEXT_PUBLIC_API_VERSION=v1

# Set to 'mock' to use mock data, 'api' to use real API
NEXT_PUBLIC_DATA_SOURCE=mock

# Bitrix24: incoming webhook URL for creating leads (crm.lead.add)
# Get it from Bitrix24: Разработчикам → Входящий webhook → URL метода crm.lead.add
# Example: https://your-portal.bitrix24.ru/rest/1/your_token/crm.lead.add.json
BITRIX24_WEBHOOK_URL=
